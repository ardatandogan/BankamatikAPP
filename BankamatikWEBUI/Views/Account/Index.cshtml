@model List<Bankamatik.Core.Entities.Account>

<h2>Accounts</h2>

<form method="get" asp-action="Index">
    <input type="text" name="search" class="form-control mb-2" placeholder="User ID ile hesap ara..." value="@ViewBag.Search" />
    <button type="submit" class="btn btn-primary">Ara</button>
</form>

<a class="btn btn-success mb-3" asp-action="Insert">Yeni Hesap Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>AccountID</th>
            <th>UserID</th>
            <th>Bakiye</th>
            <th>Para Cinsi</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountID</td>
                <td>@account.UserID</td>
                <td>@account.Balance</td>
                <td>@account.ParaCinsi</td>
                <td>@account.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@account.AccountID">Güncelle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@account.AccountID">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
